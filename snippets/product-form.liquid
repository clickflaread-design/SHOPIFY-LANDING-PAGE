<!-- Order Form Snippet -->
<form id="orderForm" class="order-form" data-crm-url="{{ settings.crm_api_url }}" data-crm-token="{{ settings.crm_auth_token }}" data-crm-domain="{{ settings.crm_domain }}">
  <div class="form-group">
    <label for="name">नाम *</label>
    <input type="text" id="name" name="name" placeholder="अपना पूरा नाम दर्ज करें" required>
  </div>
  
  <div class="form-group">
    <label for="phone">फोन नंबर *</label>
    <input type="tel" id="phone" name="phone" placeholder="10 अंकों का सही मोबाइल नंबर" required pattern="[6-9][0-9]{9}">
  </div>
  
  <div class="form-group">
    <label for="pincode">पिन कोड *</label>
    <input type="text" id="pincode" name="pincode" placeholder="6 अंकों का पिन कोड" required pattern="[0-9]{6}">
  </div>
  
  <div class="form-group">
    <label for="address">पता *</label>
    <textarea id="address" name="address" placeholder="अपना पूरा पता दर्ज करें" required></textarea>
  </div>
  
  <button type="submit" class="order-btn">अभी ऑर्डर करें - ₹{{ settings.product_price | default: 3150 }}</button>
  
  <div class="offer-note">
    ⚡ केवल आज 70% छूट के साथ फ्री होम डिलीवरी
  </div>
  
  <div class="privacy-note">
    <small>*एक्सप्रेस डिलीवरी के लिए सही विवरण दर्ज करें</small>
  </div>
</form>

<style>
.order-form {
  padding: 20px;
}

.form-group {
  margin-bottom: 20px;
}

.form-group label {
  display: block;
  margin-bottom: 5px;
  font-weight: bold;
  color: #333;
  font-size: 1rem;
}

.form-group input,
.form-group textarea {
  width: 100%;
  padding: 12px;
  border: 2px solid #ddd;
  border-radius: 8px;
  font-size: 1rem;
  transition: border-color 0.3s ease;
  font-family: inherit;
}

.form-group input:focus,
.form-group textarea:focus {
  outline: none;
  border-color: #28a745;
  box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.1);
}

.form-group input.error,
.form-group textarea.error {
  border-color: #ff4757;
}

.form-group textarea {
  height: 80px;
  resize: vertical;
}

.order-btn {
  width: 100%;
  background: linear-gradient(45deg, #28a745, #20c997);
  color: white;
  border: none;
  padding: 15px;
  font-size: 1.2rem;
  font-weight: bold;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  margin-bottom: 15px;
  position: relative;
}

.order-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(40, 167, 69, 0.4);
}

.order-btn:disabled {
  background: #ccc;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

.order-btn.loading {
  opacity: 0.7;
  pointer-events: none;
}

.order-btn.loading::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20px;
  height: 20px;
  margin: -10px 0 0 -10px;
  border: 2px solid #fff;
  border-top: 2px solid transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.offer-note {
  text-align: center;
  font-size: 0.9rem;
  color: #ff4757;
  font-weight: bold;
  margin-bottom: 10px;
}

.privacy-note {
  text-align: center;
  color: #666;
  font-size: 0.8rem;
}

.error-message {
  color: #ff4757;
  font-size: 0.8rem;
  margin-top: 5px;
  display: block;
}

/* Responsive */
@media (max-width: 480px) {
  .order-form {
    padding: 15px;
  }
  
  .form-group input,
  .form-group textarea {
    padding: 10px;
    font-size: 0.9rem;
  }
  
  .order-btn {
    padding: 12px;
    font-size: 1rem;
  }
}
</style>