  margin-top: 30px;
}

.trust-badge {
  background: rgba(255,255,255,0.1);
  padding: 8px 15px;
  border-radius: 20px;
  font-size: 0.9rem;
  white-space: nowrap;
}

@media screen and (max-width: 749px) {
  .final-cta-heading {
    font-size: 2rem;
  }
  
  .timer-display {
