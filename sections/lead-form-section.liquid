  cursor: not-allowed;
  opacity: 0.7;
  transform: none;
  box-shadow: none;
}

.submit-btn:disabled:hover {
  transform: none;
  box-shadow: none;
}

.submit-btn:disabled::before {
  display: none;
}

.submit-btn.enabled {
  background: linear-gradient(135deg, #e74c3c, #c0392b);
