.form-testimonial {
  background: #f8f9fa;
  border-radius: 15px;
  padding: 20px;
  margin-top: 25px;
  border-left: 4px solid #ff6b35;
}

.testimonial-content .stars {
  color: #f39c12;
  font-size: 1.1rem;
