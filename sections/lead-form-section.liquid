}

.form-product-image img {
  width: 100%;
  max-width: 250px;
  height: auto;
  border-radius: 15px;
  margin-bottom: 20px;
}

.product-highlights {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.highlight-item {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 0.95rem;
  color: #2c3e50;
  font-weight: 600;
}

.highlight-icon {
  font-size: 1.2rem;
